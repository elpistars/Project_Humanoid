cmake_minimum_required(VERSION 3.9)
project(kinematic VERSION 1.0.0 DESCRIPTION "Library for invers kinematics")
include(GNUInstallDirs)
add_library(kinematics SHARED foot_ik.cpp)
set_target_properties(kinematics PROPERTIES
    VERSION $(PROJECT_VERSION)
    SOVERSION 1)
target_include_directories(kinematics PRIVATE include)
install(TARGETS kinematics
    LIBRARY DESTINATION ${CMAKE_INSTALL_LIBDIR}
    PUBLIC_HEADER DESTINATION ${CMAKE_INSTALL_INCLUDEDIR})